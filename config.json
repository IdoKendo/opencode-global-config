{
    "$schema": "https://opencode.ai/config.json",
    "theme": "tokyonight",
    "mcp": {
        "notion": {
            "enabled": false,
            "type": "remote",
            "url": "https://mcp.notion.com/mcp"
        },
        "jira": {
            "enabled": false,
            "type": "remote",
            "url": "https://mcp.atlassian.com/v1/sse"
        },
        "gitlab": {
            "enabled": false,
            "type": "remote",
            "url": "https://gitlab.com/api/v4/mcp"
        }
    },
    "agent": {
        "build": {
            "permission": {
                "skill": {
                    "conventional-commits": "allow",
                    "prepare-commit-changes": "allow"
                }
            }
        }
    }
}
